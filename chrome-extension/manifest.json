{
    "manifest_version": 3,
    "name": "Text Summarizer",
    "version": "1.0",
    "description": "Summarize selected text using GPT",
    "permissions": [
     "activeTab",
     "scripting",
     "storage",
     "contextMenus"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "commands": {
        "summarize-selection": {
            "suggested_key": {
                "default": "Ctrl+Shift+Y",
                "mac": "Command+Shift+Y"
            },
            "description": "Summarize selected text"
        }
    }
}